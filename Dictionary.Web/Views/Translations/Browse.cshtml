@model IEnumerable<Dictionary.Data.Models.Translation>

@{
    ViewBag.Title = "Translator";
    ViewBag.Message = "Hello!";
}

<div class="jumbotron">
    <h1>Dictionary</h1>
    <p class="lead">En applikation för att spara, visa och redigera översättningar.</p>
    <p>
        @Html.ActionLink("Skapa ny översättning", "Create", null, new { @class = "btn btn-default" })
    </p>
</div>

<div>
    Bläddra per vy: @Html.DropDownList("Vy", new SelectList(Model.Select(m => m.CurrentView).Distinct(), "Välj vy"), new { @class = "btn btn-default dropdown-toggle" }) Ej implementerad ännu, avvaktar viewmodel
    <br />
    <br />
</div>

<div class="row">
    <table class="table table-striped table-hover table-dark">
        <tr>
            <th>
                <p>CurrentView</p>
            </th>
            <th>
                <p>TranslationKey</p>
            </th>
            <th>
                Svensk text
            </th>
            <th>
                Engelsk text
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentView)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslationKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SV_Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EN_Text)
            </td>
            <td style="white-space:nowrap;">
                @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("Radera", "Delete", new { id = item.Id }, new { @class = "text-danger" })
            </td>
        </tr>
        }

    </table>
</div>